<form action="/shelters/<%= @shelter.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH">

  <p>Edit Shelter Details:</p>
  <label>Name: </label><input type='text', name='shelter[name]', value="<%= @shelter.name %>"/><br>
  <label>Address </label><input type='text', name ='shelter[address]', value="<%= @shelter.address %>"><br>
  <label>City </label><input type='text', name ='shelter[city]', value="<%= @shelter.city %>"/><br>
  <label>State </label><input type='text', name ='shelter[state]', value="<%= @shelter.state %>"/><br>
  <label>Zip </label><input type='text', name ='shelter[zip]', value="<%= @shelter.zip %>"/><br>
  <label></label><input type='submit' value='Submit'/>
</form>
